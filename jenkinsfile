pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_KEY')
    }

    stages {
        stage('Packer Init') {
            steps {
                echo 'Initializing Packer'
                sh 'packer init aws-ami.pkr.hcl'
            }
        }

        stage('Packer Fmt') {
            steps {
                echo 'Formatting Packer code'
                sh 'packer fmt aws-ami.pkr.hcl'
            }
        }

        stage('Packer Validate') {
            steps {
                echo 'Validating Packer code'
                sh 'packer validate aws-ami.pkr.hcl'
            }
        }

        stage('Packer Build AMI') {
            steps {
                echo 'Building AMI'
                sh 'packer build aws-ami.pkr.hcl'
            }
        }
    }
}
